<div class="content ">
    <div class="row">
        <div class="col-lg-12 col-md-12 mx-auto">
            <div class="card">

                <% if ( message ) { %>
                    <div id="message">
                        <p class="alert alert-success" style="margin-top: 20px;">
                            <%= message %>
                        </p>
                    </div>
                <% } %>
                
                
                <div class="card-header">
                    <h4 class="card-title"> User List
                        <span class="float-right"><a href="<%=`/user/create`%>"><button class="btn btn-primary">Add
                                    User</button></a></span>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-lg-12 col-md-12">
                        <div class="table-responsive">

                            <table id="user_list" class="table" aria-describedby="mydesc">
                                <thead>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Ph NO</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for (let i=0; i < users.length; i++) {%>
                                        <tr>
                                            <td>
                                                <%= users[i]['id'] %>
                                            </td>
                                            <td>
                                                <%= users[i]['firstName'] %>
                                            </td>
                                            <td>
                                                <%= users[i]['lastName'] %>
                                            </td>
                                            <td>
                                                <%= users[i]['email'] %>
                                            </td>
                                            <td>
                                                <%= users[i]['phone'] %>
                                            </td>
                                            <td>
                                                <a href="<%=`/user/${users[i]['id']}`%>"><button
                                                        class="btn btn-primary btn-sm">Edit</button></a>
                                                <a href="<%=`/user/${users[i]['id']}/delete`%>"><button
                                                        class="btn btn-danger btn-sm">Delete</button></a>
                                            </td>
                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(() => {
        document.getElementById('message').innerHTML = "";
    }, "5000")
</script>